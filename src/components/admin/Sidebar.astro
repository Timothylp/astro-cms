---
import IconDocs from "./icons/IconDocs.astro";
import IconLogo from "./icons/IconLogo.astro";
import IconPage from "./icons/IconPage.astro";
import IconSection from "./icons/IconSection.astro";
import IconSettings from "./icons/IconSettings.astro";
---

<aside class="fixed top-0 left-0 h-full w-64" aria-label="Sidenav">
  <div class="h-full overflow-y-auto border-r border-gray-200 bg-white py-5 px-3 dark:border-gray-700 dark:bg-gray-800">
    <div class="flex justify-center p-4"><a href="/admin"><IconLogo /></a></div>

    <ul class="space-y-2">
      <li>
        <a
          href="/admin/pages"
          class={`group flex items-center rounded-lg p-2 text-base font-normal text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 ${
            Astro.url.pathname.includes("/admin/pages") ? "bg-gray-100" : ""
          }`}>
          <IconPage />
          <span class="ml-3">Pages</span>
        </a>
      </li>
    </ul>
    <ul class="mt-5 space-y-2 border-t border-gray-200 pt-5 dark:border-gray-700">
      <li>
        <a
          href="#"
          class="group flex items-center rounded-lg p-2 text-base font-normal text-gray-900 transition duration-75 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">
          <IconSection />
          <span class="ml-3">Sections</span>
        </a>
      </li>
      <li>
        <a
          href="#"
          class="group flex items-center rounded-lg p-2 text-base font-normal text-gray-900 transition duration-75 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">
          <IconDocs />
          <span class="ml-3">Documentation</span>
        </a>
      </li>
    </ul>
  </div>
  <div class="absolute bottom-0 left-0 z-20 flex w-full justify-center space-x-4 bg-white p-4 dark:bg-gray-800">
    <a
      href="#"
      data-tooltip-target="tooltip-settings"
      class="inline-flex cursor-pointer justify-center rounded p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white">
      <IconSettings />
    </a>
    <div
      id="tooltip-settings"
      role="tooltip"
      class="tooltip invisible absolute z-10 inline-block rounded-lg bg-gray-900 py-2 px-3 text-sm font-medium text-white opacity-0 shadow-sm transition-opacity duration-300">
      Param√®tres
      <div class="tooltip-arrow" data-popper-arrow></div>
    </div>
  </div>
</aside>
