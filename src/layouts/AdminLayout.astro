---
import Sidebar from "../components/admin/Sidebar.astro";

const { title = "Administration" } = Astro.props;

const isListing = Astro.url.pathname.split("/").length >= 4;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <title>{title ? title + " | Administration" : "Administration"}</title>
  </head>
  <body>
    <Sidebar />
    <main class="ml-64 min-h-screen bg-gray-50 p-20 dark:bg-gray-900">
      <div class="mx-auto max-w-screen-xl px-4 lg:px-12">
        {
          !isListing ? (
            <header class="p-3 sm:p-5">
              <h1 class="mb-2 text-4xl font-bold tracking-tight text-gray-900 dark:text-white">{title}</h1>
            </header>
          ) : null
        }
        <slot />
      </div>
    </main>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"></script>
  </body>
</html>
